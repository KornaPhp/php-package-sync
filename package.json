{
    "name": "package-sync",
    "version": "1.0.0",
    "description": "sync a package repo with a template/skeleton repo",
    "main": "dist/package-sync.js",
    "scripts": {
        "test": "./node_modules/.bin/jest tests --verbose",
        "test:coverage": "./node_modules/.bin/jest tests --coverage",
        "fmt": "./node_modules/.bin/prettier --config .prettierrc --write 'src/**/*.{js,ts,json,yml,yaml}' 'tests/**/*.{js,ts,json,yml,yaml}' './*.{js,yml,yaml}' 'dist/*.{json,yml,yaml}'",
        "lint": "./node_modules/.bin/eslint --ext ts,js src/",
        "lint:fix": "./node_modules/.bin/eslint --ext ts,js --fix src/",
        "lint:staged": "./node_modules/.bin/lint-staged",
        "fix": "npm run fmt && npm run lint:fix",
        "build:dev": "./node_modules/.bin/esbuild --platform=node --target=node14 --define:__APP_VERSION__=\"'1.0'\" --format=cjs --bundle --log-level=error --outdir=dist src/index.ts && mv --force dist/index.js dist/package-sync.js",
        "dev": "npm run build:dev && node dist/package-sync.js",
        "prepare": "is-ci || husky install",
        "check:circular": "npx madge --circular --extensions ts ./src"
    },
    "author": "Patrick Organ <patrick@permafrost.dev>",
    "license": "MIT",
    "lint-staged": {
        "*.{js,ts}": [
            "./node_modules/.bin/prettier --config .prettierrc --write",
            "./node_modules/.bin/eslint --ext ts,js --fix"
        ],
        "*.{json,yaml,yml}": [
            "./node_modules/.bin/prettier --config .prettierrc --write"
        ]
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.20",
        "@types/yargs": "^16.0.1",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "esbuild": "^0.11.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-prettier": "^3.2.0",
        "husky": "^6.0.0",
        "is-ci": "^3.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "prettier-eslint-cli": "^5.0.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "chalk": "^4.1.0",
        "cli-table3": "^0.6.0",
        "js-yaml": "^4.0.0",
        "micromatch": "^4.0.2",
        "semver": "^7.3.5",
        "string-similarity": "^4.0.4",
        "yargs": "^16.0.0"
    },
    "bin": {
        "package-sync": "dist/package-sync"
    }
}

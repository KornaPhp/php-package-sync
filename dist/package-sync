#!/bin/bash

THISDIR=$(dirname $0)
NODE=$(which node)

# support for being run with npx or npm
if [ -e "$THISDIR/../package-sync/dist/package-sync.js" ]; then
    $NODE "$THISDIR/../package-sync/dist/package-sync.js" $*
    exit 0
fi

# support for running build locally
if [ -e "$THISDIR/package-sync.js" ]; then
    $NODE "$THISDIR/package-sync.js" $*
    exit 0
fi
